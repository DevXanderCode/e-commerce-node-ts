<section class="pagination">

    <% if (currentPage !==1) { %>

        <a href="?page=1">1</a>
        <% } %>
            <% if (hasPreviousPage && previousPage !==1 && previousPage !==currentPage) { %>
                <a href="?page=<%= previousPage %>">
                    <%= previousPage %>
                </a>
                <% } %>
                    <a href="?page=<%= currentPage %>" class="active">
                        <%= currentPage %>
                    </a>
                    <% if (hasNextPage) { %>
                        <a href="?page=<%= nextPage %>">
                            <%= nextPage %>
                        </a>
                        <% } %>

                            <% if (currentPage !==lastPage && nextPage !==lastPage) { %>

                                <a href="?page=<%= lastPage %>">
                                    <%= lastPage %>
                                </a>
                                <% } %>

</section>